<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:services="using:HCIExplorer.Services"
             xmlns:models="using:HCIExplorer.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="200"
             x:Class="HCIExplorer.Views.LogViewerControl"
             x:DataType="services:LogService">
    
    <UserControl.Styles>
        <Style Selector="ItemsControl">
            <Setter Property="Background" Value="#1A2A3A"/>
        </Style>
    </UserControl.Styles>
    
    <Border Background="#1A2A3A" CornerRadius="4" Padding="8">
        <Grid RowDefinitions="Auto,*">
            <!-- Filter Bar -->
            <Border Grid.Row="0" Background="#2D3740" CornerRadius="4" Padding="8" Margin="0,0,0,8">
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <CheckBox Content="Requests" IsChecked="{Binding ShowRequests}" 
                              Foreground="#4FC3F7" FontWeight="SemiBold"/>
                    <CheckBox Content="Responses" IsChecked="{Binding ShowResponses}" 
                              Foreground="#81C784" FontWeight="SemiBold"/>
                    <CheckBox Content="Debug" IsChecked="{Binding ShowDebug}" 
                              Foreground="#FFB74D" FontWeight="SemiBold"/>
                    <CheckBox Content="Errors" IsChecked="{Binding ShowErrors}" 
                              Foreground="#EF5350" FontWeight="SemiBold"/>
                    <Separator Width="1" Background="#404D58" Margin="8,0"/>
                    <CheckBox Content="Auto-scroll" IsChecked="{Binding AutoScroll}" 
                              Foreground="#FFFFFF"/>
                    <Button Content="Clear" Click="OnClearClick" 
                            Classes="secondary" Padding="8,4"/>
                </StackPanel>
            </Border>
            
            <!-- Log Content -->
            <Border Grid.Row="1" Background="#1E2830" CornerRadius="4">
                <ScrollViewer Name="LogScrollViewer" 
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl Name="LogItemsControl" ItemsSource="{Binding LogEntries}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="models:LogEntry">
                                <Border Padding="4,2" BorderBrush="#2D3740" BorderThickness="0,0,0,1">
                                    <Grid ColumnDefinitions="140,80,*">
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss.fff}}"
                                                   Foreground="#808080"
                                                   FontFamily="Consolas,Menlo,monospace"
                                                   FontSize="12"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Type}"
                                                   FontWeight="SemiBold"
                                                   FontFamily="Consolas,Menlo,monospace"
                                                   FontSize="12">
                                            <TextBlock.Styles>
                                                <Style Selector="TextBlock">
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                </Style>
                                            </TextBlock.Styles>
                                        </TextBlock>
                                        <StackPanel Grid.Column="2" Spacing="2">
                                            <TextBlock Text="{Binding Message}"
                                                       FontFamily="Consolas,Menlo,monospace"
                                                       FontSize="12"
                                                       TextWrapping="Wrap">
                                                <TextBlock.Styles>
                                                    <Style Selector="TextBlock">
                                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    </Style>
                                                </TextBlock.Styles>
                                            </TextBlock>
                                            <TextBlock Text="{Binding HexData}"
                                                       FontFamily="Consolas,Menlo,monospace"
                                                       FontSize="11"
                                                       Foreground="#606060"
                                                       TextWrapping="Wrap"
                                                       IsVisible="{Binding HexData, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</UserControl>
